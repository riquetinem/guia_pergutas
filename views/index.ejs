<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Guia de perguntas</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
</head>
<body>
    <h1>Seja bem vindo ao guia de perguntas!</h1>
    <hr>
    <h3>Lista de perguntas</h3>

    <p>Nome: <%= nome %></p>
    <p>Linguagem preferida: <%= lang %></p>

    <% if(msg) {%>
        <h3>Tudo ok!</h3>
    <% } else { %>
        <h3>Mensagem de erro!</h3>
    <% } %>

    <% produtos.forEach(function(produto) { %>
        <h3><%= produto.nome %></h3>
        <h4><%= produto.preco %></h4>
    <% }) %>
</body>
</html>
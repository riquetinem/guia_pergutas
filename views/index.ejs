<%- include('partials/header.ejs') %>

<div class="container">
    <hr>
    <h1>Perguntas</h1>
    <a href="/perguntar" class="btn btn-outline-dark btn-info">Perguntar</a>
    <hr>
    <% perguntas.forEach(pergunta => {%>
        <br>
        <div class="card">
            <div class="card-body">
                <%= pergunta.titulo %>
            </div>

            <div class="card-footer">
                <a href="/pergunta/<%= pergunta.id %>" class="btn btn-outline-dark btn-primary">Responder</a>
            </div>
        </div>
    <% })%>
</div>

<%- include('partials/footer.ejs') %>